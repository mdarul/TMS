<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/task_create_task_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextBlockStyle"/>

    <EditText
        android:id="@+id/task_create_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        style="@style/EditTextBlockStyle"/>

    <EditText
        android:id="@+id/task_create_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/content"
        style="@style/EditTextBlockStyle"/>

    <Spinner
        android:id="@+id/task_create_stage_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <EditText
        android:id="@+id/task_create_hours_spent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hours_spent"
        style="@style/EditTextBlockStyle">
    </EditText>

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/create_task_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"

        android:text="@string/create"
        android:onClick="createTask"/>

</LinearLayout>