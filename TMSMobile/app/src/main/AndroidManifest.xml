<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mdl7.tmsmobile">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NavigationScreenActivity" />
        <activity android:name=".TasksListActivity" />
        <activity android:name=".TaskEditActivity" />
        <activity android:name=".WorkTimeActivity" />
        <activity android:name=".WorkTimeTaskSelectActivity" />
        <activity android:name=".TaskCreateActivity" />
        <activity android:name=".TaskActivity" />

    </application>
</manifest>
